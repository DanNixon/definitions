<definition name="NXcanSAS" extends="NXobject" type="group"
	    version="1.0"  
	    category="application"
	    xmlns="http://definition.nexusformat.org/nxdl/@NXDL_RELEASE@"
	    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	    xsi:schemaLocation="http://definition.nexusformat.org/nxdl/@NXDL_RELEASE@ ../nxdl.xsd"
	    >
  <doc>
    Implementation of the canSAS standard to store
    reduced multi-dimensional small-angle scattering data according.
    
    see http://www.cansas.org/formats/canSAS2012/1.0/doc for more details.
    <!-- 
      revise this URL and documentation once canSAS provides 
      a full description of the multi-dimensional standard.
      
      for now, this is based on 
      http://www.cansas.org/formats/canSAS2012/1.0/doc/framework.html
     -->
  </doc>

  <group type="NXsubentry">
    <doc>Place the canSAS ``SASentry`` group as a child of a NeXus ``NXentry`` group.</doc>
    <attribute name="canSAS_class">
      <doc>Official canSAS_class group to which this group conforms. http://www.cansas.org/</doc>
      <enumeration>
        <item value="SASentry" />
      </enumeration>
    </attribute>

    <field name="definition">
      <doc>Official NeXus NXDL schema to which this subentry conforms.</doc>
      <enumeration>
        <item value="NXcanSAS" />
      </enumeration>
    </field>
    
    <!-- required items -->
    <group type="NXdata">
      <attribute name="canSAS_class">
        <doc>Official canSAS_class group to which this group conforms.</doc>
        <enumeration>
          <item value="SASdata" />
        </enumeration>
      </attribute>
    </group>

    <!-- optional items -->
    <field name="title" type="NX_CHAR" minOccurs="0" />
    <field name="run" type="NX_CHAR" minOccurs="0" />

    <group type="NXinstrument" minOccurs="0" >
      <attribute name="canSAS_class">
        <doc>Official canSAS_class group to which this group conforms.</doc>
        <enumeration>
          <item value="SASinstrument" />
        </enumeration>
      </attribute>

      <group type="NXdetector" minOccurs="0">
        <attribute name="canSAS_class">
          <doc>Official canSAS_class group to which this group conforms.</doc>
          <enumeration>
            <item value="SASdetector" />
          </enumeration>
        </attribute>
      </group>

      <group type="NXsource" minOccurs="0">
        <attribute name="canSAS_class">
          <doc>Official canSAS_class group to which this group conforms.</doc>
          <enumeration>
            <item value="SASsource" />
          </enumeration>
        </attribute>
      </group>
    </group>

    <group type="NXsample" minOccurs="0">
      <attribute name="canSAS_class">
        <doc>Official canSAS_class group to which this group conforms.</doc>
        <enumeration>
          <item value="SASsample" />
        </enumeration>
      </attribute>

      <field name="name" type="NX_CHAR">
        <doc>Descriptive name of sample</doc>
      </field>
    </group>

  </group>
  
</definition>
